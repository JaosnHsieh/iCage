<div ng-controller="cageCtrl">
<span us-spinner="{radius:30, width:8, length: 16}"></span>
<h1 class="page-header">籠子管理</h1>
        <ul class="nav nav-tabs">
          <li class="active">
            <a  href="#1" data-toggle="tab" id="list">籠子列表</a>
          </li>
          <li><a href="#2" data-toggle="tab" id="add">新增籠子資料</a>
          </li>
          <li><a href="#3" data-toggle="tab" id="edit" ng-show="editCage!=null">編輯籠子資料</a>
          </li>
        </ul>

        <div class="tab-content ">

          <div class="tab-pane active" id="1">


                <div class="panel panel-primary">

                  <div class="panel-heading"></div>
                  <div class="panel-body">

                    <table class="table table-bordered table-striped">

                      <thead>
                        <td style="width:6em;">編輯/刪除</td>
                        <td>籠號</td>
                        <td>名稱</td>
                        <td>狀態</td>
                        <td>備註</td>
                      </thead>

                      <tbody>
                        <tr ng-repeat="c in cages">
                          <td>
                            <a class="btn btn-info btn-block" ng-click="updateCage(c)">編輯</a>
                            <div class="dropdown">
                                <button class="btn btn-danger btn-block dropdown-toggle" type="button" data-toggle="dropdown">刪除
                                </button>
                                <ul class="dropdown-menu">
                                  <li class="btn btn-danger btn-block" ng-click="deleteCage(c)">是</li>
                                  <li class="btn btn-primary btn-block">否</li>
                                </ul>
                            </div>
                          </td>
                          <td>{[{c.idNo}]}</td>
                          <td>{[{c.name}]}</td>
                          <td>{[{c.status}]}</td>
                          <td>{[{c.memo}]}</td>
                        </tr>
                      </tbody>
                    
                    </table>

                  </div>

                </div>

                 
          </div>

          <div class="tab-pane" id="2">
            
              <div class="panel panel-primary">

                <div class="panel-heading"></div>
                <div class="panel-body">

                  <form name="cageForm" ng-submit="addCage()" novalidate>

                   

                    <div class="form-group row">
                        <div class="col-sm-12">
                            <label for="">名稱<strong class="text-danger">*(必填)</strong></label>
                       
                        
                            <input class="form-control" type="text" ng-model="cage.name">
                        </div>
                        
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-12">
                            <label for="">狀態<strong class="text-danger">*(必填)</strong></label>
                       
                        
                            <input class="form-control" type="text" ng-model="cage.status">
                        </div>
                        
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-12">
                            <label for="">備註<strong class="text-danger">*(必填)</strong></label>
                       
                        
                            <input class="form-control" type="text" ng-model="cage.memo">
                        </div>
                        
                    </div>
                    
                      <div class="form-group row">
                        <input class="form-control  btn-primary" type="submit">
                      </div>

                  </form>

                </div>

              </div>
               


          </div>


          <div class="tab-pane" id="3">
            
              <div class="panel panel-primary">

                <div class="panel-heading"></div>
                <div class="panel-body">

                  <form name="cageForm" ng-submit="submitUpdatecage()" novalidate>

                    <div class="form-group row">
                        <div class="col-sm-12">
                            <label for="">編號<strong class="text-danger">*(必填)</strong></label>
                       
                        
                            <input class="form-control" type="text" ng-model="editCage.idNo" ng-disabled="true">
                        </div>
                        
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-12">
                            <label for="">名稱<strong class="text-danger">*(必填)</strong></label>
                       
                        
                            <input class="form-control" type="text" ng-model="editCage.name">
                        </div>
                        
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-12">
                            <label for="">狀態<strong class="text-danger">*(必填)</strong></label>
                       
                        
                            <input class="form-control" type="text" ng-model="editCage.status">
                        </div>
                        
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-12">
                            <label for="">備註<strong class="text-danger">*(必填)</strong></label>
                       
                        
                            <input class="form-control" type="text" ng-model="editCage.memo">
                        </div>
                        
                    </div>
                    
                      <div class="form-group row">
                        <input class="form-control  btn-primary" type="submit">
                      </div>

                  </form>

                </div>

              </div>
               


          </div>


        </div>

</div>